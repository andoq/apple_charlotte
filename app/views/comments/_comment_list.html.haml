.subheader
  %h3
    Comments
.comments
  .fb-comments{:href => request.url, "num-posts" => 5, :width => 470, "data-order-by" => "reverse_time"}
  %h3
    Old Comments
  - if comments.length == 0
    .comment
      = "no messages yet"
  - else
    = render comments
.comments-footer
  = link_to "All Messages", comments_path