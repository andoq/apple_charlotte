#recipe-list.left-col
  #recipe-search-form
    .form-row
      %form{:action => recipe_search_path, :method => 'get', :class => 'search-form'}
        = text_field_tag(:q, nil, :class => 'search-input')
        %span.search-button
          Search Recipes
    .form-row
      %form{:action => ingredient_search_path, :method => 'get', :class => 'search-form'}
        = text_field_tag(:q, nil, :class => 'search-input')
        %span.search-button
          Search Ingredients
  .subheader
    %h3
      = @subheader
    .form-row
      = link_to 'Try Again', random_recipes_path(:format => :html), :remote => true, :id => 'more-recipes-link', :class => 'search-button'
  #random-recipe-list.centered
    = render @recipes
  .recipe-list-footer
    = link_to 'All Recipes', all_recipes_path, :id => 'all-recipe-link'
  #char-picture
    = image_tag 'char_small.jpg', :size => "250x249"

#comment-list.right-col
  .fb-comments{:href => request.url, "num-posts" => 5, :width => 470, "data-order-by" => "reverse_time"}
  .fb-activity{:href => request.url, "height" => 200, :width => 470, :header => false, :recommendations => false}
