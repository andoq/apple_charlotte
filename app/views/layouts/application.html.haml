!!!
%html
  %head
    %meta{:charset => 'utf-8'}
    %title Apple Charlotte Cooking
    = javascript_include_tag "application"
    = stylesheet_link_tag "application"
  %body
    #page
      #header
        %h1 Apple Charlotte Cooking
      #navigation
        .tabs
          .tab
            = link_to "Home", root_path
        #recipe-search-form
          %form{:action => recipe_search_path, :method => 'get', :class => 'search-form'}
            = text_field_tag(:q)
            %span.search-button
              Search Recipes

          %form{:action => ingredient_search_path, :method => 'get', :class => 'search-form'}
            = text_field_tag(:q)
            %span.search-button
              Search Ingredients
      #content
        = yield
      #footer
        footer

